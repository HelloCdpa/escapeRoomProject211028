package escapeRoom;

import java.util.*;

public class RoomMain {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		List<RoomDTO> memberList = new ArrayList<>();
		RoomService r = new RoomService();
		
		boolean run = true;
		while (run) {
			System.out.println("------------------------------------------------------------");
			System.out.println("1.회원가입 | 2.회원정보조회 | 3.게임실행 | 4.명예회원의 전당 | 5.종료 ");
			System.out.println("------------------------------------------------------------");
			System.out.print("선택> ");
			int input = scan.nextInt();

			if (input == 1) {
				memberList = r.boradWrite(memberList);

			} else if (input == 2) {
				r.boradListView(memberList);

			} else if (input == 3) {
				memberList = r.boradView(memberList);

			} else if (input == 4) {
				memberList = r.boradDlelete(memberList);

			} else if (input == 5) {
				System.out.println("종료");
				run = false;
			} else {
				System.out.println("다시 입력해주세요.");
			}
			
		}

	}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
