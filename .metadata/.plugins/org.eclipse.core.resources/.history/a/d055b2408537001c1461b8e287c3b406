								return memberList;
							}

						} else if (num4 == 5399) {
							System.out.println("cake는 몇 글자 일까요? ㅎ-ㅎ");
							System.out.println("숫자 비밀번호 입력 : ");
							num4 = scan.nextInt();
							System.out.println("이미 지나간 기회는 돌아오지 않습니다.끝");
							run = false;
						} else {
							System.out.println("땡!!!!끝");
							run = false;
						}

					} else if (num3 == 3) {
						System.out.println("당신의 거짓말을 용서할 수 없습니다. 끝");
						run = false;
					}

				}

